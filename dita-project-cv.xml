<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://www.dita-ot.org/rng/project.rnc" type="application/relax-ng-compact-syntax"?>
<project xmlns="https://www.dita-ot.org/project">
  <publication id="pdf-base" transtype="pdf">
    <profile>
        <ditaval href="src/main/content/cv.ditaval" />
    </profile>
  </publication>
  <deliverable name="CV" id="cv">
    <context name="cv">
      <input href="src/main/content/main.ditamap" />
      <profile><ditaval href="src/main/content/cv_classic.ditaval" /></profile>
    </context>
    <output href="." />
    <publication idref="pdf-base">
      <param name="args.output.base" value="${author}_cv"/>
    </publication>
  </deliverable>
  <deliverable>
    <context name="resume" id="resume">
      <input href="src/main/content/main.ditamap" />
      <profile><ditaval href="src/main/content/cv_resume.ditaval" /></profile>
    </context>
    <output href="." />
    <publication idref="pdf-base">
      <param name="args.output.base" value="${author}_resume"/>
    </publication>
  </deliverable>
</project>